@{
    ViewBag.Title = "Patient Info";
}



<h2>Basic Information</h2>
<form action="" name ="Patient Information">
<div class="left half">
<div class="input">
    <label>Procedure: </label>
    <select name="Procedure" id="Patient.PatientInfo.Procedure">
	</select>
</div>
<div class="input">
	<label>Other:</label>
    <input type="text" name="weight" class="inline" id="Patient.PatientInfo.ProcedureOther" >
</div>
<div class="input">
	<label>Body Weight (kg):</label>
    <input type="text" name="weight" class="inline" id="Patient.PatientInfo.BodyWeight" >
</div>
<div class="input">
	<label>Age:</label>
    <input type="text" name="Years" placeholder="Years" class="inline" id="Patient.PatientInfo.AgeInYears" style="width:25%">
    <input type="text" name="months"placeholder="Months" class="inline" id="Patient.PatientInfo.AgeInMonths" style="width:25%"/>
</div>
<div class="input">
    <label>Temperament: </label>
    <select name="Temperament" id="Patient.PatientInfo.Temperament">
	</select>
</div>
<div class ="input">
    <label>Date: </label>
    <input type="text" name="weight" class="inline" id="Patient.PatientInfo.Date" ><a href="javascript:NewCal('Patient.PatientInfo.Date','ddmmyyyy',true, 12)"><img src="~/Scripts/cal.gif" width="16" height="16" border="0" alt="Pick a date"></a>
</div>
</div>
<div class = "right half">
<h2>Pain Assessment</h2>
<div class="input">
    <label>Preoperative: </label>
    <select name="PreOp" id="Patient.PatientInfo.PreoperativePainAssesment">
	</select>
</div>
<div class="input">
    <label>Anticipated Postoperative: </label>
    <select name="PostOp" id="Patient.PatientInfo.PostperativePainAssesment">
	</select>
</div>
</div>
</form>
