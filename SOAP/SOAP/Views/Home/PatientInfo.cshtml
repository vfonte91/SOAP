@{
    ViewBag.Title = "Patient Info";
}

<h2>Basic Information</h2>
<form action="" name ="PatientInfo">
<div class="left half">
<div class="input">
    <label>Procedure: </label>
     <button type="button" id="PatientInfo-BasicInfo-Procedure" class="toolTipButton" onclick="toolTipGenerate(1, 'Patient.PatientInfo.Procedure')">?</button>
    <select name="Procedure" id="Patient.PatientInfo.Procedure">
	</select>
</div>
<div class="input">
	<label>Other:</label>
    <input type="text" name="Other" class="inline" id="Patient.PatientInfo.ProcedureOther">
</div>
<div class="input">
	<label>Body Weight (kg):</label>
    <input type="text" name="BodyWeight" class="inline" id="Patient.PatientInfo.BodyWeight">
</div>
<div class="input">
	<label>Age:</label>
    <input type="text" name="AgeInYears" placeholder="Years" class="inline" id="Patient.PatientInfo.AgeInYears" style="width:25%">
    <input type="text" name="AgeInMonths"placeholder="Months" class="inline" id="Patient.PatientInfo.AgeInMonths" style="width:25%">
</div>
<div class="input">
    <label>Temperament: </label>
    <button type="button" id="PatientInfo-BasicInfo-Temperament" class="toolTipButton" onclick="toolTipGenerate(2, 'Patient.PatientInfo.Temperament')">?</button>
    <select name="Temperament" id="Patient.PatientInfo.Temperament">
	</select>
</div>
<div class ="input">
    <label>Procedure Date: </label>
    <input type="text" name="ProcedureDate" class="inline" id="Patient.PatientInfo.ProcedureDate">
</div>
</div>
<div class = "right half">
<h2>Pain Assessment</h2>
<div class="input">
    <label>Preoperative: </label>
    <button type="button" id="PatientInfo-PainAssesment-Preop" class="toolTipButton" onclick="toolTipGenerate(3, 'Patient.PatientInfo.PreOperationPainAssessment')">?</button>
    <select name="PreOperationPainAssessment" id="Patient.PatientInfo.PreOperationPainAssessment" onchange="dropdownSelected(this)">
	</select>
</div>
<div class="input">
    <label>Anticipated Postoperative: </label>
    <button type="button" id="PatientInfo-PainAssesment-Postop" class="toolTipButton" onclick="toolTipGenerate(4, 'Patient.PatientInfo.PostOperationPainAssessment')">?</button>
    <select name="PostOperationPainAssessment" id="Patient.PatientInfo.PostOperationPainAssessment" onchange="dropdownSelected(this)">
	</select>
</div>
</div>
</form>
