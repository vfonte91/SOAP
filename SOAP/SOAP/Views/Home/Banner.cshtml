    <div id="user-info">
        <span>
            <a href="#" id="edit-profile-button" class="edit-profile disabled"><span>Settings</span></a>
        </span>
    </div>
    <fieldset id="profile-menu" style="display: none;">
        <form method="post" id="edit-profile" action="">
            <p>
			    <label>Full Name</label>
                <input type="text" name="FName" id = "Patient.Profile.FullName">
            </p>
            <p>
                <label>Email </label>
                <input type="text" name="email" id = "Patient.Profile.Email">
            </p>
            <p>
                <label>Current Password</label>
                <input type="password" name ="currentPassword" id = "Patient.Profile.CurrentPassword"/>
            </p>
            <p>
                <label>New Password</label>
                <input type="password" name ="newPassword" id="Patient.Profile.NewPassword" />
            </p>
            <p>
                <label>Repeat New Password</label>
                <input type="password" name ="newPassword2" id="Patient.Profile.NewPasswordTwo" />                
            </p>
            <p>
                <input id="edit-profile-submit" value="Edit Profile" type="button" onclick="editUserInformation()">
                <input id="logout" value="Log Out" type="button" style="float:right" onClick="logOut()">
            </p>
        </form>
    </fieldset>
</div>