@{
    ViewBag.Title = "Administration";
}

<h2>Administration</h2>

<form action="" name="admin">
    <div class="left half">
        <div class="input">
            <label>Dropdown Category</label>
            <select id="dropdownCat">
			</select>
        </div>
        <div class="input">
            <label>Values</label> <br />
            <textarea id="dropdownVal" rows="4" title="Comma separated list" placeholder="Comma separated list"></textarea>
        </div>
    </div>
    <div class="right half">
        <div class="input">
            <label>Users</label> <br />
            <select id="users" multiple style="float:none;margin-left:200px">
                <option value="test123">dirt</option>
                <option value="test55">test</option>
            </select>
        </div>
        <div class="input">
            <input type="button" id="delete-user" value="Delete" class="submit left" onclick="deleteUser($('#users').val())"/>
            <input type="button" id="promote-user" value="Promote" class="submit right"/>
        </div>
    </div>
</form>